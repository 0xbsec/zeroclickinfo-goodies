<div class="gw">
  <span class="input--date">
    <span class="frm input--date g third">
      <p class="frm__desc">DATE</p>
      <input type="number" class="frm__input date--start" />
    </span>
    <span class="frm input--time input--numeric g third">
      <p class="frm__desc">Time</p>
      <input type="text" maxlength='2' pattern='^(2[0-3]|[0-1]?[0-9])$'
        size='2' class="input--hour frm__input" />
      <span class="sep--time">:</span>
      <input type="text" maxlength='2' pattern='^([0-5][0-9]|[0-9])$'
        size='2' class="input--minute frm__input" />
      <span class="sep--time">:</span>
      <input type="text" maxlength='2' pattern='^([0-5][0-9]|[0-9])$'
        size='2' class="input--second frm__input" />
    </span>
  </span>
  <span class="frm op--select g third">
    <p class="frm__desc">DURATION</p>
    <span class="gw">
      <input type="number" class="frm__input input--op-amt g thirty"/>
      <span class="frm__select g seventy">
        <select class="op--type" />
      </span>
    </span>
  </span>
</div>

<div class="result--area">
  <p>RESULTING DATE</p>
  <span class="date--result c-base__title" />
</div>
