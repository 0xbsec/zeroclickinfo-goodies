<div class="objects--body">
    <span class="objects--objectImage">
        {{#if saturn}}    
            <img width="45px" height="28px" src="{{imagePath}}.png">
        {{else}}
            <img width="40px" height="40px" src="{{imagePath}}.png">
        {{/if}}
    </span>

    <span class="objects--info">
        <span class="text--primary objects--objectAttribute">
            {{{attributes}}}
        </span>
        
        <span class="text--secondary objects--objectName">
            {{operation}}
        </span>
    </span>
</div>
