{
    "id":"linux_cheat_sheet",
    "name":"Linux",
    "description": "Linux is an open-source Unix-like operating system developed by Linus Torvalds",
    "metadata":{
        "sourceName":"Cheatography",
        "sourceUrl":"http://www.cheatography.com/davechild/cheat-sheets/linux-command-line/"
    },
    "template_type": "terminal",
    "section_order": [
        "Navigation",
        "File Commands",
        "SSH",
        "Installation",
        "Network",
        "System Info",
        "Searching and Sorting",
        "Process Management",
        "File Permissions",
        "Compression"
    ],
    "sections": {
        "Navigation": [
            {
                "val": "list directory contents",
                "key": "ls"
            },
            {
                "val": "formatted long listing with hidden files",
                "key": "ls -al"
            },
            {
                "val": "change the current directory, regardless of its location, to the <dir> directory",
                "key": "cd <dir>"
            },
            {
                "val": "return directly to its home directory",
                "key": "cd ~"
            },
            {
                "val": "change the current directory to the root directory",
                "key": "cd /"
            },
            {
                "val": "change to the parent of the current directory",
                "key": "cd .."
            },
            {
                "val": "print name of current/working directory",
                "key": "pwd"
            }  
        ],
        "File Commands": [
            {
                "val": "create directory dir",
                "key": "mkdir dir"
            },
            {
                "val": "delete file",
                "key": "rm file"
            },
            {
                "val": "remove dir and it's contents recursively",
                "key": "rm -r dir"
            },
            {
                "val": "force remove file",
                "key": "rm -f file"
            },
            {
                "val": "remove dir and it's file recursively",
                "key": "rm -rf dir"
            },
            {
                "val": "copy file1 to file2",
                "key": "cp file1 file2"
            },
            {
                "val": "rename or move file1 to file2",
                "key": "mv file1 file2"
            },
            {
                "val": "create symbolic link 'link' to file",
                "key": "ln -s file link"
            },
            {
                "val": "create or update file",
                "key": "touch file"
            },
            {
                "val": "place standard input into file",
                "key": "cat > file"
            },
            {
                "val": "display the contents of the file.You can scroll down but not up.",
                "key": "more file"
            },
            {
                "val": "output the contents of the file.You can scroll up and down.",
                "key": "less file"
            },
            {
                "val": "output first 10 lines of file",
                "key": "head file"
            },
            {
                "val": "output last 10 lines of file",
                "key": "tail file"
            },
            {
                "val": "output contents of file as it grows",
                "key": "tail -f file"
            }
        ],
        "SSH": [
            {
                "val": "connect to host as user",
                "key": "ssh user@host"
            },
            {
                "val": "connect using port p",
                "key": "ssh -p port user@host"
            },
            {
                "val": "connect and use bind port",
                "key": "ssh -D port user@host"
            }
        ],
        "Installation": [
            {
                "val": "configure the source file",
                "key": "./configure"
            },
            {
                "val": "compile the source code",
                "key": "make"
            },
            {
                "val": "install the compiled source code",
                "key": "make install"
            }
        ],
        "Network": [
            {
                "val": "ping host 'host'",
                "key": "ping host"
            },
            {
                "val": "get whois for domain",
                "key": "whois domain"
            },
            {
                "val": "get DNS for domain",
                "key": "dig domain"
            },
            {
                "val": "reverse lookup host",
                "key": "dig -x host"
            },
            {
                "val": "download file",
                "key": "wget file"
            },
            {
                "val": "continue stopped download",
                "key": "wget -c file"
            },
            {
                "val": "recursively download files from url",
                "key": "wget -r url"
            }
        ],
        "System Info": [
            {
                "val": "show current date/time",
                "key": "date"
            },
            {
                "val": "show this month's calendar",
                "key": "cal"
            },
            {
                "val": "show uptime",
                "key": "uptime"
            },
            {
                "val": "display who is online",
                "key": "w"
            },
            {
                "val": "display current user",
                "key": "whoami"
            },
            {
                "val": "print the system information",
                "key": "uname -a"
            },
            {
                "val": "print the cpu info",
                "key": "cat /proc/cpuinfo"
            },
            {
                "val": "print the memory information",
                "key": "cat /proc/meminfo"
            },
            {
                "val": "find all instances of file",
                "key": "locate file"
            }
        ],
        "Process Management":[
            {
                "val": "report a snapshot of the current processes",
                "key": "ps"
            },
            {
                "val": "show processes for all users",
                "key": "ps aux"
            },
            {
                "val": "kill process with pid 'pid'",
                "key": "kill pid"
            },
            {
                "val": "lists stopped/background jobs, resume stopped job in the background",
                "key": "bg"
            },
            {
                "val": "bring most recent job to foreground",
                "key": "fg"
            },
            {
                "val": "bring job n to the foreground",
                "key": "fg n"
            },
            {
                "val": "estimate file space usage",
                "key": "du"
            },
            {
                "val": "Summarize file space usage and print sizes in human readable format (e.g., 1K 234M 2G)",
                "key": "du -sh"
            },
            {
                "val": "Display amount of free and used memory in the system",
                "key": "free"
            },
            {
                "val": "show the location of the executable 'app'",
                "key": "whereis app"
            },
            {
                "val": "show which app will be run by default",
                "key": "which app"
            }
        ],
        "Searching and Sorting": [
            {
                "val": "search for pattern in files",
                "key": "grep pattern files"
            },
            {
                "val": "search recursively for pattern in dir",
                "key": "grep -r pattern dir"
            },
            {
                "val": "search for the pattern in in the output of command",
                "key": "command | grep pattern"
            },
            {
                "val": "find all instances of file",
                "key": "locate file"
            },
            {
                "val": "sort the content of files alphabetically",
                "key": "sort filename"
            },
            {
                "val": "sort in reverse",
                "key": "sort -r filename"
            },
            {
                "val": "sort randomly",
                "key": "sort -R filename"
            }            
        ],
        "File Permissions": [
            {
                "val": "change permission of file",
                "key": "chmod octal file"
            },
            {
                "val": "read (r)",
                "key": "4"
            },
            {
                "val": "write (w)",
                "key": "2"
            },
            {
                "val": "execute (x)",
                "key": "1"
            }
        ],
        "Compression": [
            {
                "val": "tar files into file.tar",
                "key": "tar cf file.tar files"
            },
            {
                "val": "untar into current directory",
                "key": "tar xf file.tar"
            },
            {
                "val": "list the contents of an archive",
                "key": "tar tf file.tar"
            },
            {
                "val": "compress file and rename to file.gz",
                "key": "gzip file"
            },
            {
                "val": "decompress file.gz",
                "key": "gzip -d file.gz"
            }
        ]
    }
}
