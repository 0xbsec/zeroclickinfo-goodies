    "sections": {
        "Area Formulas": [
            {
                "key": "A = side²",
                "val": "Square"
            },
            {
                "key": "A = length × width",
                "val": "Rectangle"
            },
            {
                "key": "A = (base × height) / 2",
                "val": "Triangle"
            },
            {
                "key": "A = π × r²",
                "val": "Circle"
            },
            {
                "key": "A = 1/2 (base1 + base2) × height",
                "val": "Trapizoid"
            }
        ],
        "Surface Area Formulas":[
            {
                "key": "SA = 6 × side²",
                "val": "Cube"
            },
            {
                "key": "SA = (2 × length × width) + (2 × length × height) + (2 × height × width)",
                "val": "Rectangualar Prism"
            },
            {
                "key": "SA =  4 × π × radius²",
                "val": "Sphere"
            },
            {
                "key": "SA = (2π × radius x height) + (2π × radius²)",
                "val": "Right Circular Cylinder"
            },
            {
                "key": "SA = π × radius × ( radius + sqrt(height² + radius²) )",
                "val": "Right Circular Cone"
            }
        ],
        "Volume Formulas": [
            {
                "key": "V = side³",
                "val": "Cube"
            },
            {
                "key": "V = length × width × height",
                "val": "Rectangular Prism"
            },
            {
                "key": "V = (4/3) × π × radius³",
                "val": "Sphere"
            },
            {
                "key": "V = π × radius³ × height",
                "val": "Right Circular Cylinder"
            },
            {
                "key": "V = (1/3) × π × radius² × height",
                "val": "right Circular Cone"
            }

        ]
    }
