    "name": "Midnight Commander",
    "description": "Console File Manager",
    "metadata": {
        "sourceName": "MidnightCommanderCheatSheet"
    },
    "template_type": "keyboard",
    "section_order": [
        "Movement",
        "Filesystem operations",
        "Selecting files",
        "Pane operations",
        "Miscellanious"

    ],
    "sections": {
        "Movement": [
            {
                "key": "[↑]",
                "val": "Move selection bar to previous entry"
            },
            {
                "key": "[↓]",
                "val": "Move selection bar to next entry"
            },
            {
                "key": "[PgUp] or [Alt] [v]",
                "val": "Move selection bar one page up"
            },
            {
                "key": "[PgDn] or [Ctrl] [v]",
                "val": "Move selection bar one page down"
            },
            {
                "key": "[Home] or [Alt] [<]",
                "val": "Move selection bar to top of the panel"
            },
            {
                "key": "[End] or [Alt] [>]",
                "val": "Move selection bar to bottom of the panel"
            },
            {
                "key": "[Tab] or [Ctrl] [i]",
                "val": "Switch between panels"
            },
            {
                "key": "[←]",
                "val": "Move to parent directory (Lynx motion enabled)"
            },
            {
                "key": "[→]",
                "val": "Move to child directory (Lynx motion enabled)"
            },
            {
                "key": "[Alt] [y]",
                "val": "Move to next directory in the history"
            },
            {
                "key": "[Alt] [u]",
                "val": "Move to previous directory in the history"
            },
            {
                "key": "[Meta] [c]",
                "val": "Quick 'cd' into specified directory"
            }
        ],
        "Pane operations" : [
            {
                "key": "[Ctrl] [u]",
                "val": "Swap panes"
            },
            {
                "key": "[Alt] [o]",
                "val": "Load selected directory to other pane / Load parent directory of the selected file to other pane"
            },
            {
                "key": "[Alt] [i]",
                "val": "Mirror current directory in the other pane"
            },
            {
                "key": "[Alt] [g]",
                "val": "Jump to first item on page"
            },
            {
                "key": "[Alt] [r]",
                "val": "Jump to middle item on page"
            },
            {
                "key": "[Alt] [t]",
                "val": "Switch between listing modes"
            },
            {
                "key": "[Alt] [j]",
                "val": "Jump to last item on page"
            },
            {
                "key": "[Ctrl] [\\]",
                "val": "Show directory hotlist"
            },
            {
                "key": "[Ctrl] [x] ... [d]",
                "val": "Compare directories in panes"
            }
        ],
        "Selecting files": [
            {
                "key": "[Ctrl] [T] or [Insert]",
                "val": "Toggle tagging/marking on selected item"
            },
            {
                "key": "[+]",
                "val": "Tag/Mark dialog"
            },
            {
                "key": "[\\]",
                "val": "Untag/Unmark dialog"
            }
        ],
        "Filesystem operations": [
            {
                "key": "[F5]",
                "val": "Copy file (dir) (to location of other pane)"
            },
            {
                "key": "[F6]",
                "val": "Move file (dir) (to location of other pane) / Rename file (dir)"
            },
            {
                "key": "[F7]",
                "val": "Create new directory"
            },
            {
                "key": "[F8]",
                "val": "Delete (selected) files/directories"
            },
            {
                "key": "[F3]",
                "val": "View contents of file"
            },
            {
                "key": "[F4]",
                "val": "Edit contents of file"
            },
            {
                "key": "[Ctrl] [r]",
                "val": "Refresh/rescan directory view"
            }
        ],
        "Miscellanious": [
            {
                "key": "[F10]",
                "val": "Quit MC"
            },
            {
                "key": "[F1]",
                "val": "See MC help"
            },
            {
                "key": "[F2]",
                "val": "Display user menu"
            },
            {
                "key": "[F9]",
                "val": "Enable top menu"
            },
            {
                "key": "[Ctrl] [o]",
                "val": "Toggle show/hide MC, reveal shell"
            }
        ]
    }
