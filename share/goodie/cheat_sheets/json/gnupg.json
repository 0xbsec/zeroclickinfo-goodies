{
    "id": "gnupg_cheat_sheet",
    "name": "GnuPG",
    "description": "Encryption Tool",
    "metadata": {
        "sourceName": "GnuPG man page",
        "sourceUrl": "https://www.gnupg.org/documentation/manpage.en.html"
    },
    "aliases": [
        "gpg"
    ],
    "template_type": "terminal",
    "section_order": [
        "Encrypting / Decrypting",
        "Signing",
        "Key Management",
        "Key Server"
    ],
    "sections": {
        "Encrypting / Decrypting": [
            {
                "val": "Encrypt a file to a recipient",
                "key": "$ gpg -e -r \\[recipient key\\] \\[file\\]"
            },
            {
                "val": "Encrypt and sign a file to a recipient",
                "key": "$ gpg -e -s -r \\[recipient key\\] \\[file\\]"
            },
            {
                "val": "Encrypt a file with a password",
                "key": "$ gpg -c \\[file\\]"
            },
            {
                "val": "Decrypt a file",
                "key": "$ gpg -d \\[file\\]"
            }
        ],
        "Signing": [
            {
                "val": "Sign a file (detached ASCII signature)",
                "key": "$ gpg -b -a \\[file\\]"
            },
            {
                "val": "Clear-sign a file",
                "key": "$ gpg --clearsign \\[file\\]"
            },
            {
                "val": "Sign a file",
                "key": "$ gpg -s -a \\[file\\]"
            },
            {
                "val": "Verify a signature",
                "key": "$ gpg -v \\[file\\]"
            }
        ],
        "Key Management": [
            {
                "val":"Exporting a public key to an ascii-armoured file",
                "key": "$ gpg -o \\[file.asc\\] --export -a \\[key\\]"
            },
            {
                "val":"Importing a key",
                "key": "$ gpg --import \\[file\\]"
            },
            {
                "val":"Listing keys",
                "key": "$ gpg --list \\[optional search\\]"
            },
            {
                "val":"Generating a key",
                "key": "$ gpg --gen-key"
            },
            {
                "val":"Generating a revokation certificate for a key",
                "key": "$ gpg --gen-revoke \\[key\\]"
            },
            {
                "val":"Edit key",
                "key": "$ gpg --edit \\[key\\]"
            }
        ],
        "Key Server": [
            {
                "val":"Send a key to a key server",
                "key": "$ gpg --send-keys \\[key\\]"
            },
            {
                "val":"Retrieve a key from a key server",
                "key": "$ gpg --recv-keys \\[key\\]"
            },
            {
                "val":"Refreshing all keys in local keyring",
                "key": "$ gpg --refresh-keys"
            }
        ]
    }
}


