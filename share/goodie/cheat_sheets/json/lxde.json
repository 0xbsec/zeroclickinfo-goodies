        "Default LXDE/Openbox Bindings": [
            {
                "key": "[CTRL] [ALT] [ARROW]",
                "val": "Go to desktop (direction)"
            },
            {
                "key": "[SUPER] [F1]/[F2]/[F3]/[F4]",
                "val": "Go to desktop (number)"
            },
            {
                "key": "[SHIFT] [ALT] [ARROW]",
                "val": "Send to desktop"
            },
            {
                "key": "[SUPER] [D]",
                "val": "Toggle show desktop"
            },
            {
                "key": "[ALT] [F4]",
                "val": "Close window"
            },
            {
                "key": "[ALT] [ESC]",
                "val": "Hide window"
            },
            {
                "key": "[ALT] [SPACE]",
                "val": "Window menu"
            },
            {
                "key": "[ALT] [TAB]",
