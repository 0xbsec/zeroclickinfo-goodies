            },
            {
                "key": "[CTRL] [ALT] [DEL]",
                "val": "LXTask (task manager)"
            },
            {
                "key": "[CTRL] [ALT] [T]",
                "val": "Open terminal"
            },
            {
                "key": "[CTRL] [ALT] [L]",
                "val": "Lock screen"
            }
        ],
        "Lubuntu Specific Bindings": [
            {
                "key": "[ALT] [PRINT SCREEN]",
